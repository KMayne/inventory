generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
}

model User {
  id           String       @id @default(uuid())
  username     String       @unique
  passwordHash String
  name         String
  createdAt    DateTime     @default(now())
  sessions     Session[]
  ownedInventories   Inventory[]       @relation("InventoryOwner")
  memberInventories  InventoryMember[]
}

model Session {
  id        String @id @default(uuid())
  userId    String
  expiresAt BigInt
  user      User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model Inventory {
  id       String            @id
  name     String
  ownerId  String
  owner    User              @relation("InventoryOwner", fields: [ownerId], references: [id], onDelete: Cascade)
  members  InventoryMember[]

  @@index([ownerId])
}

model InventoryMember {
  inventoryId String
  userId      String
  inventory   Inventory @relation(fields: [inventoryId], references: [id], onDelete: Cascade)
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@id([inventoryId, userId])
  @@index([userId])
}
